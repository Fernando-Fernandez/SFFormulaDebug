{
    "manifest_version": 3,
    "name": "Formula Debugger for Salesforce",
    "description": "Helps debug and test a Salesforce formula.",
    "version": "1.01",
    "icons": {
        "16": "images/icon-16.png",
        "32": "images/icon-32.png",
        "48": "images/icon-48.png",
        "128": "images/icon-128.png"
    },
    "action": {
        "default_icon": {
            "16": "images/icon-16.png",
            "32": "images/icon-32.png",
            "48": "images/icon-48.png",
            "128": "images/icon-128.png"
        },
        "default_popup": "popup.html"
    },
    "commands": {
        "_execute_action": {
            "suggested_key": {
                "default": "Ctrl+J",
                "mac": "Command+J"
            }
        }
    },
    "content_scripts": [
        {
            "js": ["scripts/content.js"],
            "type": "module",
            "run_at": "document_idle",
            "matches": [
                "https://*.lightning.force.com/lightning/setup/ObjectManager/*/FieldsAndRelationships/*/edit*",
                "https://*.lightning.force.com/lightning/setup/",
                "https://*.my.salesforce.com/*"
            ],
            "all_frames": true
        },
        {
            "js": ["scripts/content.js"],
            "type": "module",
            "run_at": "document_start",
            "matches": [
                "https://*.lightning.force.com/*",
                "https://*.my.salesforce.com/*"
            ],
            "all_frames": true
        }
    ],
    "web_accessible_resources": [{
        "matches": [
            "https://*.lightning.force.com/*",
            "https://*.my.salesforce.com/*"
        ],
        "resources": ["scripts/*"]
    }],
    "background": {
        "service_worker": "scripts/background.js",
        "type": "module"
    },
    "permissions": ["activeTab", "cookies", "scripting"],
    "host_permissions": [
        "https://*.lightning.force.com/*",
        "https://*.my.salesforce.com/*"
    ]
}